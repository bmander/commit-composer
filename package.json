{
  "name": "commitcomposer",
  "displayName": "CommitComposer",
  "description": "Automatically draft git commit messages using AI.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmander/commit-composer.git"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitcomposer.draftCommitMessage",
        "title": "Draft Commit Message"
      },
      {
        "command": "commitcomposer.draftCommitBodyUsingTitle",
        "title": "Draft Commit Body Using Title"
      },
      {
        "command": "commitcomposer.copyAllAndClose",
        "title": "Copy All and Close"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "commitcomposer.draftCommitBodyUsingTitle",
          "when": "resourceLangId == commitmsg"
        },
        {
          "command": "commitcomposer.copyAllAndClose",
          "when": "resourceLangId == commitmsg"
        }
      ]
    },
    "languages": [
      {
        "id": "commitmsg",
        "aliases": [
          "Commit Message",
          "commitmsg"
        ],
        "extensions": [
          ".commitmsg"
        ]
      }
    ],
    "configurationDefaults": {
      "[commitmsg]": {
        "editor.rulers": [
          50,
          74
        ],
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 74
      }
    },
    "configuration": [
      {
        "title": "Commit Composer",
        "properties": {
          "commitcomposer.openaiApiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          },
          "commitcomposer.modelName": {
            "type": "string",
            "default": "gpt-3.5-turbo",
            "enum": [
              "gpt-4",
              "gpt-4-0314",
              "gpt-4-32k",
              "gpt-4-32k-0314",
              "gpt-3.5-turbo",
              "gpt-3.5-turbo-0301"
            ],
            "description": "OpenAI Model Name"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.1",
    "openai": "^3.2.1",
    "simple-git": "^3.18.0",
    "wrap-ansi": "^8.1.0"
  }
}
